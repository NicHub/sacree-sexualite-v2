{% if page.url == "/404.html" %}
	{% assign thisbaseurl = "https://laetitiastucki.github.io/sacree-sexualite-v2/" %}
{% else %}
	{% assign page_level = page.url | append: "-" | split: '/' | size | minus: 2 %}
	{% if page_level < 1 %}
		{% assign thisbaseurl = "./" %}
	{% else %}
		{% assign thisbaseurl = "../" %}
		{% for index in (2..page_level) %}
			{% assign thisbaseurl = thisbaseurl | append: "../" %}
		{% endfor %}
	{% endif %}
{% endif %}
